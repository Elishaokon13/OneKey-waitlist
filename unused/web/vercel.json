{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "devCommand": "npm run dev",
  "env": {
    "NEXT_PUBLIC_APP_NAME": "@NEXT_PUBLIC_APP_NAME",
    "NEXT_PUBLIC_APP_DOMAIN": "@NEXT_PUBLIC_APP_DOMAIN"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "@NEXT_PUBLIC_APP_NAME",
      "NEXT_PUBLIC_APP_DOMAIN": "@NEXT_PUBLIC_APP_DOMAIN"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
} 